<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp"
    android:background="@drawable/item_round_box"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:id="@+id/item_book"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_book_title"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_text_round_box"
            android:padding="1dp"
            android:lines="1"
            android:text="Title" />

        <TextView
            android:id="@+id/tv_book_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_text_detail_round_box"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="kdc label"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_book_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제작자"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/tv_book_docId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Content" />
    </LinearLayout>

</LinearLayout>